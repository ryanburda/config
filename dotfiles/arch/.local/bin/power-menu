#!/bin/zsh

option=$(printf "Shutdown\nRestart\nLock\nLogout" | fuzzel --dmenu --prompt "")

case "$option" in
    Shutdown)
        systemctl poweroff
        ;;
    Restart)
        systemctl reboot
        ;;
    Lock)
        swaylock
        ;;
    Logout)
        loginctl terminate-user "$USER"
        ;;
esac
