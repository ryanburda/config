#!/bin/zsh

option=$(printf "Sound\nWiFi\nBluetooth\nDisplays\nPrinters\nBackground\nEnergy Profile" | sort | fuzzel --dmenu --prompt "")

case "$option" in
    Sound)
        wezterm start -- wiremix -v output
        ;;
    WiFi)
        wezterm start -- impala
        ;;
    Bluetooth)
        wezterm start -- bluetui
        ;;
    Displays)
        wezterm start -- wdisplays
        ;;
    Background)
        wezterm start -- background-selector
        ;;
    Energy\ Profile)
        energy-profiles
        ;;
    Printers)
        xdg-open http://localhost:631
        ;;
esac
